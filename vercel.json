{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "index.js": {
      "runtime": "nodejs20.x",
      "includeFiles": [
        "templates/**",
        "node_modules/swagger-ui-dist/**"
      ]
    }
  },
  "routes": [
    { "src": "/api/.*", "dest": "index.js" },
    { "src": "/(.*)", "dest": "index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
