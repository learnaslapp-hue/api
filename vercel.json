{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*\\.(?:html|css|js|png|jpg|jpeg|gif|svg|ico|txt|map))", "dest": "/public/$1" },
    { "src": "/(favicon\\.ico)", "dest": "/public/$1" },
    { "src": "/api/(.*)", "dest": "index.js" },
    { "src": "/(.*)", "dest": "index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
